<%- include('./partials/header.ejs'); %>

    <div id="login-container">
      <div id="left-column"></div>
      <div id="branding">
        <img src="./images/logo.svg" alt="Chat App Logo" />
        <h1>Register - Chat Application</h1>
      </div>
      <div id="login-form">
        <form method="post" action="/register">
          <input
            type="text"
            name="name"
            placeholder="enter your full name"
            value="<%= data.name %>"
          />
          <% if (errors.name) { %>
            <p class="error show"><%= errors.name.msg %></p>
          <% } %>
          
          <input
            type="email"
            name="email"
            placeholder="enter your email"
            value="<%= data.email %>"
          />
          <% if (errors.email) { %>
            <p class="error show"><%= errors.email.msg %></p>
          <% } %>
          
          <input
            type="text"
            name="mobile"
            placeholder="enter your mobile number"
            value="<%= data.mobile %>"
          />
          <% if (errors.mobile) { %>
            <p class="error show"><%= errors.mobile.msg %></p>
          <% } %>
          
          <div class="password-container">
            <input 
              type="password" 
              name="password" 
              id="password"
              placeholder="enter password" 
            />
            <button type="button" class="password-toggle" onclick="togglePassword('password')">
              <svg class="eye-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z" fill="currentColor"/>
              </svg>
              <svg class="eye-slash-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" style="display: none;">
                <path d="M12 7c2.76 0 5 2.24 5 5 0 .65-.13 1.26-.36 1.83l2.92 2.92c1.51-1.26 2.7-2.89 3.43-4.75-1.73-4.39-6-7.5-11-7.5-1.4 0-2.74.25-3.98.7l2.16 2.16C10.74 7.13 11.35 7 12 7zM2 4.27l2.28 2.28.46.46C3.08 8.3 1.78 10.02 1 12c1.73 4.39 6 7.5 11 7.5 1.55 0 3.03-.3 4.38-.84l.42.42L19.73 22 21 20.73 3.27 3 2 4.27zM7.53 9.8l1.55 1.55c-.05.21-.08.43-.08.65 0 1.66 1.34 3 3 3 .22 0 .44-.03.65-.08l1.55 1.55c-.67.33-1.41.53-2.2.53-2.76 0-5-2.24-5-5 0-.79.2-1.53.53-2.2zm4.31-.78l3.15 3.15.02-.16c0-1.66-1.34-3-3-3l-.17.01z" fill="currentColor"/>
              </svg>
            </button>
          </div>
          <% if (errors.password) { %>
            <p class="error show"><%= errors.password.msg %></p>
          <% } %>
          
          <div class="password-container">
            <input 
              type="password" 
              name="confirmPassword" 
              id="confirmPassword"
              placeholder="confirm password" 
            />
            <button type="button" class="password-toggle" onclick="togglePassword('confirmPassword')">
              <svg class="eye-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z" fill="currentColor"/>
              </svg>
              <svg class="eye-slash-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" style="display: none;">
                <path d="M12 7c2.76 0 5 2.24 5 5 0 .65-.13 1.26-.36 1.83l2.92 2.92c1.51-1.26 2.7-2.89 3.43-4.75-1.73-4.39-6-7.5-11-7.5-1.4 0-2.74.25-3.98.7l2.16 2.16C10.74 7.13 11.35 7 12 7zM2 4.27l2.28 2.28.46.46C3.08 8.3 1.78 10.02 1 12c1.73 4.39 6 7.5 11 7.5 1.55 0 3.03-.3 4.38-.84l.42.42L19.73 22 21 20.73 3.27 3 2 4.27zM7.53 9.8l1.55 1.55c-.05.21-.08.43-.08.65 0 1.66 1.34 3 3 3 .22 0 .44-.03.65-.08l1.55 1.55c-.67.33-1.41.53-2.2.53-2.76 0-5-2.24-5-5 0-.79.2-1.53.53-2.2zm4.31-.78l3.15 3.15.02-.16c0-1.66-1.34-3-3-3l-.17.01z" fill="currentColor"/>
              </svg>
            </button>
          </div>
          <% if (errors.confirmPassword) { %>
            <p class="error show"><%= errors.confirmPassword.msg %></p>
          <% } %>

          <% if (errors.common) { %>
            <p class="error show"><%= errors.common.msg %></p>
          <% } %>
          
          <input type="submit" value="Register" />
          
          <p class="login-link">
            Already have an account? <a href="/">Login here</a>
          </p>
        </form>
      </div>
    </div>

    <script>
      function togglePassword(inputId) {
        const passwordInput = document.getElementById(inputId);
        const toggleButton = passwordInput.nextElementSibling;
        const eyeIcon = toggleButton.querySelector('.eye-icon');
        const eyeSlashIcon = toggleButton.querySelector('.eye-slash-icon');
        
        if (passwordInput.type === 'password') {
          passwordInput.type = 'text';
          eyeIcon.style.display = 'none';
          eyeSlashIcon.style.display = 'block';
          toggleButton.classList.add('active');
        } else {
          passwordInput.type = 'password';
          eyeIcon.style.display = 'block';
          eyeSlashIcon.style.display = 'none';
          toggleButton.classList.remove('active');
        }
      }
    </script>
  </body>
</html> 